{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch server",
        "request": "launch",
        "runtimeArgs": ["run-script", "dev"],
        "runtimeExecutable": "npm",
        "skipFiles": ["<node_internals>/**"],
        "type": "node",
        "console": "integratedTerminal"
      },
      {
        "type": "firefox",
        "request": "launch",
        "name": "Launch Firefox",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}"
      }
    ],
    "compounds": [
      {
        "name": "Both",
        "configurations": ["Launch server", "Launch Firefox"]
      }
    ]
  }
  